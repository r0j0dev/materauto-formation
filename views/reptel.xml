<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="reptel_action" model="ir.actions.act_window">
            <field name="name">Reptel Actions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reptel</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="reptel_mto_menuitem"
            name="Reptel Mto"
        />

        <menuitem
            id="reptel_menuitem"
            name="Reptel"
            parent="reptel_mto_menuitem"
            action="reptel_action"
            sequence="1"
        />

        <record id="reptel_view_tree" model="ir.ui.view">
            <field name="name">reptel_view_tree</field>
            <field name="model">reptel</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="numero"/>
                    <field name="departement_id"/>
                </tree>
            </field>
        </record>

        <record id="reptel_view_form" model="ir.ui.view">
            <field name="name">reptel_view_form</field>
            <field name="model">reptel</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="departement_id"/>
                            </group>
                            <group>
                                <field name="numero" widget="phone"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>