<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_wizard_inherit" model="ir.ui.view">
            <field name="name">sale_order_wizard_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <button name="action_open_wizard" type="object" string="wizard" class="btn-primary"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>