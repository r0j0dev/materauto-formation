<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_search_view_form" model="ir.ui.view">
            <field name="name">sale_order_search_view_form</field>
            <field name="model">sale.order.search</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group string="Recherche de produit">
                           <group>
                                 <field name="partner"/>
                                 <field name="product_name"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="category_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>